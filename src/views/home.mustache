{{> header }}
{{> loading }}
<section class="home__section-slider hidden">
    <div class="search-input">
        <form id="search">
            <input type="text" />
            <div class="after"></div>
            <input type="submit" />
        </form>
    </div>

    <div class="current-weather-wrapper">
        <div class="weather-info">
            <div class="city-name">
                {{ cityName }}
            </div>
            <div class="actual-location">
                {{ location }}
            </div>

            <div class="weather-description">
                {{ currentWeather }}
            </div>

            <div class="weather-card">
                <img class="weather-icon" src="../assets/weather-icons/{{ currentWeatherIcon }}.svg">
                <h1>{{ currentTemperature }}ยบ</h1>
                <p>Now</p>
            </div>

        </div>
    </div>

    <hr class="divider">

    <div class="weather-wrapper">
    {{#weatherList}}
        <div class="weather-card">
            <img class="weather-icon sun-{{ icon }}" src="../assets/weather-icons/{{ icon }}.svg">
            <h1>
                {{ temperature }}ยบ
            </h1>
            <div class="weather-description">
                {{ weatherDescription }}
            </div>
            <p>
                {{ unixTime }}
            </p>
        </div>
    {{/weatherList}}
    </div>
</section>
{{> footer }}